<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/bsdk_cloud_selection_adapter_left_right_padding"
                android:paddingRight="@dimen/bsdk_cloud_selection_adapter_left_right_padding"
                android:paddingTop="@dimen/bsdk_cloud_selection_adapter_top_bottom_padding">

    <ImageView
        android:id="@+id/bsdkCloudSelectionItemAdapterSelectedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/bsdk_generic_image_content_desc"
        android:src="@drawable/bsdk_icon_adapter_list_item_selected_indicator"
        android:visibility="invisible"/>

    <com.behance.sdk.ui.customviews.BehanceSDKTextView
        android:id="@+id/bsdkCloudSelectionItemAdapterCloudNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/bsdkCloudSelectionItemAdapterSelectedIndicator"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/bsdk_cloud_selection_adapter_txt_color"
        android:textSize="@dimen/bsdk_cloud_selection_adapter_txt_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/bsdkCloudSelectionItemAdapterCloudNameTextView"
        android:layout_marginTop="@dimen/bsdk_cloud_selection_adapter_top_bottom_padding"
        android:background="@color/bsdk_cloud_selection_adapter_divider_color"/>

</RelativeLayout><!-- From: file:/Users/bharath/GIT/CreativeSDKRoot/creativesdk/CreativeSDKBehance/res/layout/bsdk_adapter_adobe_cloud_selection_list_item.xml -->