<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/storage_assetcell_background_card"
    android:orientation="vertical"
    >

    <com.adobe.creativesdk.foundation.internal.storage.controllers.utils.AdobeDesignItemDynamicHeightView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mobilecreation_package_mainImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_centerInParent="true"
                >
            </ImageView>

            <LinearLayout
                android:id="@+id/mobilecreation_package_threeImages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/mobilecreation_package_secondImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </ImageView>
                <ImageView
                    android:id="@+id/mobilecreation_package_thirdImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </ImageView>
                <ImageView
                    android:id="@+id/mobilecreation_package_FourthImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </ImageView>
            </LinearLayout>
        </LinearLayout>

    </com.adobe.creativesdk.foundation.internal.storage.controllers.utils.AdobeDesignItemDynamicHeightView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adobe_mobilecreation_package_cell_title_bar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adobe_library_items_color_text_left_margin">

            <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                android:id="@+id/mobilecreation_package_cell_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/adobe_library_items_color_text_size"
                android:textColor="@color/adobe_csdk_theme_color_dark_text"
                android:singleLine="true"
                android:ellipsize="middle"
                />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                android:id="@+id/mobilecreation_package_cell_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/adobe_library_items_color_text_size"
                android:textColor="@color/adobe_csdk_theme_color_light_text"
                android:singleLine="true"
                android:ellipsize="middle"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/folder_forward_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true">

            </RelativeLayout>

        </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

