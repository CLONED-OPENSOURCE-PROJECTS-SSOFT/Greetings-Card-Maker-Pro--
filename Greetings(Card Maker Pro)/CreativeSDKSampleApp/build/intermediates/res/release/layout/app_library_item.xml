<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/app_lib_card_min_width"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="@color/actionbar_background"
        android:elevation="3dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/app_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/app_section_pad_top_bottom"
                android:paddingLeft="@dimen/app_section_pad_left"
                android:paddingRight="@dimen/app_section_pad_right"
                android:paddingTop="@dimen/app_section_pad_top_bottom">


                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="@dimen/app_lib_image_icon_width"
                    android:layout_height="@dimen/app_lib_image_icon_width" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/app_name_left_padding"
                    android:paddingRight="4dp"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/app_name_color"
                            android:textSize="16sp"

                            />


                        <TextView
                            android:id="@+id/app_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/IDS_BY"
                            android:textColor="@color/app_dev_by_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/launch_app_button"
                        fontPath="fonts/AdobeClean-Regular.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="@color/get_button_bg"
                        android:text="@string/IDS_APP_GET"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        tools:ignore="MissingPrefix"
                        />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/app_section"
                android:layout_marginLeft="@dimen/app_section_pad_left"
                android:layout_marginRight="@dimen/app_section_pad_right"
                android:background="?android:attr/dividerVertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator"
                android:layout_marginLeft="@dimen/app_section_pad_left"
                android:layout_marginRight="@dimen/app_section_pad_right">

                <TextView
                    android:id="@+id/app_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="@dimen/app_section_pad_top_bottom"
                    android:paddingTop="@dimen/app_section_pad_top_bottom"
                    android:textColor="@color/app_dev_by_color"
                    android:textSize="14sp" />


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

