<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creative_sdk_background_color"
    android:gravity="center">

    <ImageView
        android:id="@+id/adobe_storage_asset_browser_empty_state_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/adobe_storage_asset_browser_empty_state_message"
        android:src="@drawable/asset_browser_empty_state_files" />

    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
        android:id="@+id/adobe_storage_asset_browser_empty_state_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/storage_empty_state_view_padding"
        android:text="@string/storage_asset_browser_empty_folder"
        android:textColor="@color/asset_browser_light_text"
        android:textSize="@dimen/storage_empty_state_view_textSize" />

    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="38dp"
        android:background="@drawable/multi_select_open_button"
        android:layout_below="@+id/adobe_storage_asset_browser_empty_state_message"
        android:id="@+id/assetview_emptyfolder_upload_files_btn"
        android:visibility="gone">

        <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
            android:id="@+id/storage_selection_open_file_btn_title" android:text="@string/storage_empty_folder_upload_files_title"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="@dimen/asset_browser_upload_btn_title_size"/>

    </LinearLayout>

