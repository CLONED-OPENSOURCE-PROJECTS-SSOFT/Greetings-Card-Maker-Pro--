<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assetview_assetgrid_foldercell_root"
    android:layout_width="@dimen/assetbrowser_grid_item_width"
    android:layout_height="match_parent"
    android:background="@drawable/storage_assetcell_background_card" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/assetbrowser_grid_folderViewCell_layout_height"
        android:layout_margin="@dimen/assetbrowser_grid_folderViewCell_layout_margin"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/assetview_assetgrid_foldercell_imageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/assetview_assetgrid_foldercell_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/assetbrowser_grid_folderViewCell_image_margin_top"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/creative_sdk_transparent_color"
            android:src="@drawable/collection_folder" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/assetbrowser_grid_text_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/assetbrowser_grid_item_folder_padding"
            android:paddingRight="@dimen/assetbrowser_grid_item_folder_padding" 
            android:background="@color/creative_sdk_transparent_color">

            <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                android:id="@+id/assetview_assetgrid_foldercell_title"
                android:layout_width="@dimen/assetbrowser_grid_folderViewCell_text_layout_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:singleLine="true" 
                android:background="@color/creative_sdk_transparent_color"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/folder_forward_icon" 
                android:background="@color/creative_sdk_transparent_color"/>
        </LinearLayout>
                
  	 </LinearLayout>

