<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/color_item_height"
    android:paddingBottom="@dimen/color_item_top_bottom_padding"
    android:paddingTop="@dimen/color_item_top_bottom_padding">

    <LinearLayout
        android:id="@+id/color_view_selection_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/color_item_check_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/check_container_left_margin"
            android:gravity="center">

            <ImageView
                android:id="@+id/color_item_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/creativesdkcolor_ic_check_inactive"/>

        </RelativeLayout>

        <View
            android:id="@+id/actual_color_view_selection_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/name_textview_selection_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/color_item_name_left_padding"
            android:textColor="@color/color_item_name_text_color"
            android:textSize="@dimen/color_item_name_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/actual_color_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/name_textview"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/color_item_name_left_padding"
            android:textColor="@color/color_item_name_text_color"
            android:textSize="@dimen/color_item_name_text_size" />

    </LinearLayout>

