<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creative_sdk_background_color">

    <com.adobe.creativesdk.foundation.internal.grid.StaggeredGridView
        xmlns:sgv="http://schemas.android.com/apk/res-auto"
        android:id="@+id/multipage_singlecolumn_staggeredGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sgv:column_count_landscape="1"
        sgv:column_count_portrait="1"
        sgv:item_margin="@dimen/assetbrowser_grid_item_margin"
        android:longClickable="true"

        android:paddingTop="@dimen/assetbrowser_grid_padding_top" />

    <RelativeLayout
        android:id="@+id/asset_one_up_multi_page_list_section_container"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@drawable/rounded_rectangle"
        android:paddingRight="7dp"
        android:alpha="0.5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/page_indicator_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/page_numbering_header"
            android:layout_centerVertical="true"
            android:paddingTop="1dp"
            android:paddingLeft="19dp"
            android:paddingRight="7dp"/>
        <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
            android:layout_toRightOf="@id/page_indicator_list_view"
            android:id="@+id/asset_one_up_multi_page_list_section_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="12 of 12"
            android:textColor="@android:color/white"
            android:visibility="visible"/>
    </RelativeLayout>

