<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="@dimen/edit_name_popup_width"
        android:layout_height="@dimen/edit_name_popup_height"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:padding="@dimen/edit_name_popup_padding">

        <TextView
            android:id="@+id/edit_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/edit_name_popup_text_color"
            android:textSize="@dimen/edit_name_popup_textsize" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="@dimen/edit_name_popup_edittext_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColorHint="@color/edit_name_popup_hint_color"
            android:textColor="@color/black"
            android:textSize="@dimen/edit_name_popup_textsize" />

        <TextView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/edit_name_popup_edit_right_padding"
            android:textColor="@color/light_blue_100"
            android:textSize="@dimen/edit_name_popup_button_text_size" />


        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/edit_button"
            android:paddingRight="@dimen/edit_name_popup_cancel_right_padding"
            android:textColor="@color/edit_name_popup_text_color"
            android:textSize="@dimen/edit_name_popup_button_text_size" />

    </RelativeLayout>

